<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartShopHugo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SmartShopHugo" parent="Base.Theme.SmartShopHugo">
        <item
            name="colorPrimary"
            color="@color/colorPrimary"
            />
        <item
            name="colorPrimaryDark"
            color="@color/colorPrimaryDark"
            />
        <item name="colorAccent" color="@color/colorAccent" />
        <item name="android:textColorPrimary" color="@color/textColorPrimary" />
    </style>

    <style name="SmartShopHugoEditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
    </style>

    <style name="SmartShopHugoEditTextTitle">
        <item name="android:background">@drawable/edittext_title</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/edittext_text_size_title</item>
    </style>

</resources>